<?xml version="1.0" encoding="UTF-8"?>
  <plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-dnsjava-nslookup"
    version="0.1.0">
    <name>Nslookup</name>
    <description>Cordova DNSJava Nslookup Plugin</description>
    <license>MIT</license>
    <keywords>cordova,nslookup,dnsjava</keywords>
    <repo>https://github.com/hsccorp/cordova-dnsjava-nslookup</repo>
    <issue>https://github.com/hsccorp/cordova-dnsjava-nslookup/issues</issue>

    <js-module src="www/nslookup.js" name="nslookup">
      <clobbers target="NsLookup" />
    </js-module>

    <platform name="android">
      <config-file target="res/xml/config.xml" parent="/*">
        <feature name="Nslookup">
          <param name="android-package" value="com.hsc.cordova.nslookup.Nslookup"/>
        </feature>
      </config-file>
      <source-file src="src/android/libs/dnsjava-2.1.7.jar" target-dir="libs" />
      <source-file src="src/android/Nslookup.java" target-dir="src/com/hsc/cordova/nslookup"/>
    </platform>
  </plugin>
